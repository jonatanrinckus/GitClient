<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GitClient.Views"
      xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="GitClient.Views.IssuePage"
      mc:Ignorable="d" 
      d:DesignHeight="766" d:DesignWidth="1310"
      Title="IssuePage" Width="Auto" Height="Auto" Background="White">
    <DockPanel LastChildFill="False" Margin="0">
        <StackPanel Height="770" VerticalAlignment="Top" Width="270" Background="#FFECE5E5">
            <ComboBox x:Name="comboBox" Height="50" VerticalAlignment="Top" Margin="30,50,30,0"/>
            <ListBox x:Name="listBox" Margin="15,60" VerticalContentAlignment="Stretch" Padding="0" Height="401">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Label FontWeight="Bold" FontSize="26.667"></Label>
                            <Label FontStyle="Normal" FontSize="16"></Label>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <Frame x:Name="frame" DockPanel.Dock="Top">
            <Frame.Content>
                <ListView x:Name="listView" Height="750" VerticalAlignment="Top" Width="100">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Label FontSize="26.667" FontWeight="Bold"></Label>
                                <Label FontSize="16"></Label>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    
                </ListView>
            </Frame.Content>
        </Frame>
    </DockPanel>
</Page>
