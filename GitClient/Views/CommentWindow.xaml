<Window x:Class="GitClient.Views.CommentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitClient.Views"
        mc:Ignorable="d"
        Title="CommentWindow" Height="400" Width="600" WindowStyle="None">
    <Grid>
        <TextBox x:Name="CommentTextBox" Margin="50,50,50,100" TextWrapping="Wrap"/>
        <Button Content="Post" 
				HorizontalAlignment="Right" 
				Margin="0,0,75,36" 
				VerticalAlignment="Bottom" 
				Width="60" 
				Height="30" 
				Click="OnPostButtonClick"
				Background="#FF64BF5B" 
				Foreground="White" 
				IsDefault="True"/>
        <Button Content="Discart" HorizontalAlignment="Right" Margin="0,0,150,36" VerticalAlignment="Bottom" Width="60" Height="30" Background="#FFE82727" Foreground="White" IsCancel="True"/>
    </Grid>
</Window>
